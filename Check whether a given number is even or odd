bool isEven(int n)
{
   // n&1 is 1, then odd, else even
   return (!(n&1));
}
 
 input : 5    // odd
   00000101              
 & 00000001                
--------------                
   00000001       
--------------

input : 8     //even
   00001000              
 & 00000001                 
--------------               
   00000000        
--------------
